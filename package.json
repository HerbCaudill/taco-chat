{
  "name": "taco-chat",
  "license": "MIT",
  "private": false,
  "version": "0.1.0",
  "scripts": {
    "build:css": "postcss src/index.postcss -o public/index.css",
    "prebuild": "yarn build:css",
    "build": "react-scripts build",
    "dev": "cross-env DEBUG='lf*' DEBUG_COLORS=1  run-p watch start:relay start",
    "start": "react-scripts start",
    "start:relay": "node ./scripts/start-relay-server.js",
    "test": "react-scripts test",
    "test:cy": "cypress open",
    "dev:cy": "cross-env BROWSER=none CYPRESS_REMOTE_DEBUGGING_PORT=9222 run-p dev test:cy",
    "watch": "nodemon -x yarn build:css"
  },
  "dependencies": {
    "@ibm/plex": "5",
    "@localfirst/auth": "0",
    "@localfirst/relay": "1",
    "@localfirst/relay-client": "1",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/jest-dom": "5",
    "@testing-library/react": "11",
    "@testing-library/user-event": "12",
    "@types/classnames": "2",
    "@types/clipboard": "2",
    "@types/debug": "^4.1.5",
    "@types/jest": "26",
    "@types/node": "12",
    "@types/react": "17",
    "@types/react-dom": "17",
    "@windmill/react-ui": "0",
    "autoprefixer": "9",
    "classnames": "2",
    "clipboard": "2",
    "cross-env": "7",
    "cuid": "2",
    "cypress": "^6.2.1",
    "cypress-promise": "^1.1.0",
    "debug": "^4.3.1",
    "friendly-words": "1",
    "keycode": "^2.2.0",
    "mermaid": "^9.1.2",
    "nodemon": "2",
    "npm-run-all": "4",
    "postcss": "7",
    "postcss-cli": "7",
    "react": "17",
    "react-dom": "17",
    "react-scripts": "4",
    "tailwindcss": "1",
    "typescript": "4",
    "websocket-stream": "5"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "nodemonConfig": {
    "watch": [
      "postcss.config.js",
      "tailwind.config.js",
      "src/index.postcss",
      "src/theme.ts"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  },
  "devDependencies": {
    "@types/mermaid": "^8.2.1"
  }
}
