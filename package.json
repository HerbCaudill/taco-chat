{
  "name": "taco-chat",
  "license": "MIT",
  "private": false,
  "version": "0.1.0",
  "scripts": {
    "build:css": "postcss src/index.postcss -o public/index.css",
    "prebuild": "yarn build:css",
    "build": "react-scripts build",
    "dev": "run-p watch start",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "watch": "nodemon -x yarn build:css"
  },
  "dependencies": {
    "@ibm/plex": "^5.1.3",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@windmill/react-ui": "^0.5.0",
    "autoprefixer": "9",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "postcss": "7",
    "postcss-cli": "7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "tailwindcss": "1",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "nodemon": {
    "watch": [
      "postcss.config.js",
      "tailwind.config.js",
      "src/index.postcss",
      "src/theme.ts"
    ]
  },
  "browserslist": {
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ]
  }
}
